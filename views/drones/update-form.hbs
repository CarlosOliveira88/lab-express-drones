<div class="body">
    <div class="createDron">
        <h2>Update the drone</h2>
        <form action="/drones/{{dron._id}}/edit" method="POST">
            <input type="text" name="name" value="{{dron.name}}" required>
            <input type="number" name="propellers" value="{{dron.propellers}}" required>
            <input type="number" name="maxSpeed" value="{{dron.maxSpeed}}" required>
            <button type="submit">Guardar cambios</button>
        </form>
    </div>
</div>